                </div>
                <div class='slide'><img src='/img/05.webp'>
                    <div class='slider-text-content'>5 Lorem ipsum</div>
                </div>
            </div>
            <div class='nav-btns'>
                <div class='nav-btn active-nav-btn'></div>
                <div class='nav-btn'></div>
                <div class='nav-btn'></div>
                <div class='nav-btn'></div>
                <div class='nav-btn'></div>
            </div>
        </div>
    </div>
    <section id='categories'>
        <h2 class='h2-heading-style'> Категории</h2>
        <div id='categories-items' class='flex-container'>
            <a href='/apartments'>
                <figure>
                    <h6>Апартаменты</h6>
                    <div><img src='img/01.webp'></div>
                    <figcaption>
                        {{apartmentsQuantity}} апартаментов
                    </figcaption>
                </figure>
            </a>
            <a href='/cottages'>
